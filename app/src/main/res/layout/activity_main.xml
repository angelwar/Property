<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.MainActivity">

    <FrameLayout
        android:id="@+id/fragment_rg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rb_group"
        android:layout_marginBottom="2dp">

    </FrameLayout>

    <RadioGroup
        android:id="@+id/rb_group"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rb_main"
            android:checked="true"
            style="@style/tab_menu_item"
            android:drawableTop="@drawable/selector_rg_0"
            android:text="@string/main_name_0"/>

        <RadioButton
            android:id="@+id/rb_order"
            style="@style/tab_menu_item"
            android:drawableTop="@drawable/selector_rg_1"
            android:text="@string/main_name_1"/>

        <RadioButton
            android:id="@+id/rb_notice"
            style="@style/tab_menu_item"
            android:drawableTop="@drawable/selector_rg_2"
            android:text="@string/main_name_2"/>

        <RadioButton
            android:id="@+id/rb_mine"
            style="@style/tab_menu_item"
            android:drawableTop="@drawable/selector_rg_3"
            android:text="@string/main_name_3"/>
    </RadioGroup>


</RelativeLayout>