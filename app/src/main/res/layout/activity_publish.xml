                        android:id="@+id/et_community"
                        android:paddingLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:text="@={vm.xqmc}"
                        android:hint="请选择小区"/>-->

                    <Spinner
                        android:id="@+id/sp_community"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                    <Button
                        android:id="@+id/bt_Edit"
                        android:onClick="onClick"
                        android:text="输入其他小区"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_s_10"
                        android:textColor="@color/colorWhite"
                        android:gravity="center"
                        android:background="@drawable/shape_button"/>
                </LinearLayout>

                <LinearLayout
                    android:padding="5dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_white_corner">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="房屋面积: "/>
                    <EditText
                        android:textSize="@dimen/sale_house_edit"
                        android:id="@+id/et_house_size"
                        android:inputType="number"
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:hint="请输入房屋面积"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="平米"/>
                </LinearLayout>
                <LinearLayout
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:text="栋座(单元)"/>
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_s_14"
                        android:minWidth="40dp"
                        android:digits="@string/dong_string"
                        android:gravity="center"
                        android:text="@={vm.dong}"
                        android:maxLength="3"
                        android:singleLine="true"
                        android:background="@drawable/shape_circle_gray"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textSize="@dimen/sp_s_16"
                        android:textColor="@color/colorBlack"
                        android:text="栋"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_s_14"
                        android:minWidth="40dp"
                        android:gravity="center"
                        android:text="@={vm.unit}"
                        android:maxLength="2"
                        android:inputType="number"
                        android:singleLine="true"
                        android:background="@drawable/shape_circle_gray"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_s_16"
                        android:textColor="@color/colorBlack"
                        android:text="单元"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_s_16"
                        android:minWidth="40dp"
                        android:gravity="center"
                        android:text="@={vm.number}"
                        android:maxLength="2"
                        android:inputType="number"
                        android:singleLine="true"
                        android:background="@drawable/shape_circle_gray"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_s_16"
                        android:textColor="@color/colorBlack"
                        android:text="层"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_s_16"
                        android:minWidth="40dp"
                        android:gravity="center"
                        android:text="@={vm.room}"
                        android:maxLength="2"
                        android:inputType="number"
                        android:singleLine="true"
                        android:background="@drawable/shape_circle_gray"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_s_16"
                        android:textColor="@color/colorBlack"
                        android:text="号"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/gray_dc">
                    <TextView
                        android:id="@+id/tv_hx"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:onClick="onClick"
                        android:layout_height="match_parent"
                        android:text="@{vm.hx}"
                        android:background="@color/white"/>

                    <TextView
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:id="@+id/tv_cx"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:onClick="onClick"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:text="@{vm.cx}"/>

                    <TextView
                        android:id="@+id/tv_zx"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:onClick="onClick"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:text="@{vm.zx}"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_cw_dt"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/gray_dc">
                    <TextView
                        android:id="@+id/tv_cw"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:onClick="onClick"
                        android:layout_height="match_parent"
                        android:background="@color/colorWhite"
                        android:text="@{vm.cw}"/>

                    <TextView
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:id="@+id/tv_dt"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:onClick="onClick"
                        android:layout_height="match_parent"
                        android:background="@color/colorWhite"
                        android:text="@{vm.dt}"/>
                    <!--<TextView
                        android:id="@+id/tv_lx"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:onClick="onClick"
                        android:layout_height="match_parent"
                        android:background="@color/colorWhite"
                        android:text="@{vm.fwlx}"/>-->
                </LinearLayout>

                <LinearLayout
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_white_corner">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="房屋租金: "/>
                    <EditText
                        android:textSize="@dimen/sale_house_edit"
                        android:id="@+id/et_money"
                        android:paddingLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:text="@={vm.fy}"
                        android:inputType="number"
                        android:hint="请输入租金，单位元"/>

                </LinearLayout>
                <LinearLayout
                    android:padding="5dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_white_corner">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="付款方式: "/>
                    <TextView
                        android:onClick="onClick"
                        android:id="@+id/tv_fkfs"
                        android:paddingLeft="10dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:text="@={vm.fkfs}" />
                </LinearLayout>
                <!--<LinearLayout
                    android:padding="5dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_white_corner">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="租金包含费用: "/>
                    <EditText
                        android:id="@+id/et_zjbhfy"
                        android:paddingLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:text="@={vm.zjbhfy}"
                        android:hint="例如水电费，网费"/>
                </LinearLayout>-->

                <LinearLayout
                    android:padding="5dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_white_corner">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系人姓名: "/>
                    <EditText
                        android:textSize="@dimen/sale_house_edit"
                        android:id="@+id/et_lxr"
                        android:paddingLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:text="@={vm.lxrxm}"
                        android:hint="请输入姓名"/>
                </LinearLayout>

