                       android:padding="5dp"
                       android:layout_marginTop="1dp"
                       android:layout_marginLeft="5dp"
                       android:layout_marginRight="5dp"
                       android:layout_width="match_parent"
                       android:orientation="horizontal"
                       android:gravity="center_vertical"
                       android:layout_height="50dp"
                       android:background="@drawable/shape_white_corner">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="联系人身份: "/>
                       <EditText
                           android:id="@+id/et_lxrsf"
                           android:paddingLeft="10dp"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:background="@color/white"
                           android:text="@={vm.lxrsf}"
                           android:hint="个人房东/中介"/>
                   </LinearLayout>-->
                <LinearLayout
                    android:padding="5dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_white_corner">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系人号码: "/>
                    <EditText
                        android:textSize="@dimen/sale_house_edit"
                        android:id="@+id/et_lxrhm"
                        android:inputType="number"
                        android:paddingLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:text="@={vm.sjhm}"
                        android:hint="请输入手机号码"/>
                </LinearLayout>
                <LinearLayout
                    android:padding="5dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_white_corner">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="是否托管: "/>
                    <Switch
                        android:textColor="@color/white"
                        android:showText="true"
                        android:id="@+id/sw_tg"
                        android:textOn="是"
                        android:textOff="否"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <!--  <TextView
                      android:layout_marginLeft="10dp"
                      android:layout_width="match_parent"
                      android:layout_height="40dp"
                      android:gravity="center_vertical"
                      android:textColor="@color/black_333333"
                      android:text="装修情况"/>
                  <com.google.android.flexbox.FlexboxLayout
                      android:id="@+id/fl_box_zxqk"
                      app:flexWrap="wrap"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"/>-->
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/black_333333"
                    android:text="房屋配置"/>
                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/fl_box_fwpz"
                    app:flexWrap="wrap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/black_333333"
                    android:text="房屋亮点"/>
                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/fl_box_fwld"
                    app:flexWrap="wrap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/black_333333"
                    android:text="出租要求"/>
                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/fl_box_ccyq"
                    app:flexWrap="wrap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/black_333333"
                    android:text="详细介绍"/>
                <EditText
                    android:hint="输入房屋详情，不超过200字"
                    android:maxLength="200"
                    android:id="@+id/et_detail"
                    android:textSize="@dimen/sale_house_edit"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:minLines="5"
                    android:gravity="top"
                    android:padding="10dp"
                    android:focusableInTouchMode="true"
                    android:background="@drawable/bg_edit"
                    android:layout_marginBottom="40dp"/>
            </LinearLayout>
        </ScrollView>
        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:text="提交"
            android:textSize="@dimen/sp_s_16"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:background="@drawable/shape_button"
            android:onClick="onClick"/>
    </LinearLayout>
